<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.stats.BoulderingStatsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/CPW_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Climbs per week"
            android:padding="5dp"

            />
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/climbsPerWeekChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="250dp"

            app:layout_constraintTop_toBottomOf="@+id/CPW_text"
            app:layout_constraintBottom_toTopOf="@+id/grade_text"
            app:layout_constraintVertical_weight="1"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/grade_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/climbsPerWeekChart"
            android:text="Attempts per grade"
            android:padding="5dp"

            />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/avgAttemptsPerGradeChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="250dp"

            app:layout_constraintTop_toBottomOf="@+id/grade_text"
            app:layout_constraintVertical_weight="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
